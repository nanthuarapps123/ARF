<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bma.arf.AddCustomer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <!--<EditText-->
                    <!--android:id="@+id/input_cus_id"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:singleLine="true"-->
                    <!--android:background="@drawable/box"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:padding="10dp"-->
                    <!--android:textSize="15sp"-->
                    <!--android:textColor="#000000"-->
                    <!--android:layout_margin="20dp"-->
                    <!--android:textColorHint="@android:color/black"-->
                    <!--android:hint="Customer Id" />-->







                <EditText
                    android:id="@+id/input_cus_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="@drawable/box"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_margin="20dp"
                    android:textColorHint="@android:color/black"
                    android:hint="Customer name" />





                <EditText
                    android:id="@+id/input_cus_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="@drawable/box"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_margin="20dp"
                    android:textColorHint="@android:color/black"
                    android:hint="Contact number" />






                <EditText
                    android:id="@+id/input_cus_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="@drawable/box"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_margin="20dp"
                    android:textColorHint="@android:color/black"
                    android:hint="Address" />



            <Spinner
                android:id="@+id/spi_toc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/box"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/btb_add_cus"
                android:text="Add customer"
                android:background="@drawable/boxbtnblue"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>
