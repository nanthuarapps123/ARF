<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bma.arf.GeneraBill">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




    <!--<Spinner-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/spi_sel_cus"-->
        <!--android:padding="0dp"-->
        <!--android:background="@drawable/box"-->
        <!--android:layout_margin="10dp"-->
        <!--/>-->

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spi_sel_item"
        android:padding="15dp"
        android:background="@drawable/box"
        android:layout_margin="15dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box"
        android:id="@+id/ed_item_price"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="Enter Price"
        android:inputType="number"
        android:padding="8dp"
        android:layout_marginRight="10dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box"
        android:id="@+id/ed_item_kg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:hint="Enter kilogram of box"
        android:inputType="number"
        android:padding="8dp"
        android:layout_marginRight="10dp"/>


            <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box"
        android:id="@+id/ed_item_quant"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:hint="Enter Quantity"
        android:inputType="number"
        android:padding="8dp"
        android:layout_marginRight="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add_more"
            android:layout_alignParentLeft="true"
            android:background="@drawable/boxbtnblue"
            android:padding="5dp"
            android:text="Add more item"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cancel"
            android:layout_alignParentRight="true"
            android:background="@drawable/boxbtnblue"
            android:padding="5dp"
            android:text="Cancel"/>



    </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box"
                    android:id="@+id/ed_discount"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="Enter discount after select all item"
                    android:padding="8dp"
                    android:inputType="number"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_next"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@drawable/boxbtnblue"
                    android:text="Next"/>

            </LinearLayout>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Total price is : "-->
                <!--android:textColor="#000000"-->
                <!--android:textStyle="bold"-->
                <!--android:padding="10dp"/>-->


        </LinearLayout>

    </ScrollView>

</LinearLayout>
